<mjml>
  <mj-head>
    <mj-style inline="inline">
      h2,
      h3,
      a {
        color: #000000;
      }

      .link-nostyle {
        text-decoration: none;
      }

      .text-props {
        font-size: 14px;
        margin: -15px;
        width: 85%;
        Margin: 0 auto;
      }

      .footer-icons {
        display: inline-block;
        Margin: 10px;
      }

      .footer-links {
        color: #ffffff;
      }
    </mj-style>
    <mj-attributes>
      <mj-text padding="0" align="center" color="#555555" line-height="1.5" letter-spacing="1px" />
      <mj-section background-color="#ffffff" />
      <mj-button background-color="darkgray" letter-spacing="1px" font-weight="bold" width="150px" font-size="18px" />
      <mj-class name="big" font-size="24px" />
      <mj-class name="email-bg" background-color="#e1e1e1" />
      <mj-class name="short-width" width="80%" />
      <mj-class name="middle-margin" margin="0 auto" />
      <mj-all font-family="Quantico" />
    </mj-attributes>
    <mj-font name="Quantico" href="https://fonts.googleapis.com/css2?family=Quantico" />
    <mj-title>First MJML Email</mj-title>
  </mj-head>

  <mj-body mj-class="email-bg">

    <!--Header-->
    <mj-section>
      <mj-column>
        <mj-text mj-class="big">
          <a href="#" class="link-nostyle">Multi-Layout Email</a>
        </mj-text>
      </mj-column>
    </mj-section>

    <!--Banner Image-->
