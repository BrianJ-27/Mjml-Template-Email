      <mj-column>
        <mj-text padding="0">
          <h3 style="color: #ffffff; ">Stay Connected</h3>
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="darkgray" padding="0">
      <mj-column width="10%">
        <mj-image padding="10px" src="https://drive.google.com/uc?export=view&id=1EGD5t_uAJZWWK1llHOuXIlxHKwxzU6to" alt="facebook icon link" width="30px" />
